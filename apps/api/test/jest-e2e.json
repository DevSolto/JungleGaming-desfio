{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@repo/contracts$": "<rootDir>/__mocks__/repo-contracts.ts",
    "^@repo/contracts/(.*)$": "<rootDir>/__mocks__/repo-contracts/$1.ts"
  }
}
