{
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "react-jsx",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client"
    ],
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@nestjs/swagger": [
        "./src/shims/nest-swagger.ts"
      ],
      "@nestjs/swagger/*": [
        "./src/shims/nest-swagger.ts"
      ],
      "class-transformer/storage": [
        "./src/shims/empty-module.ts"
      ],
      "@grpc/proto-loader": [
        "./src/shims/empty-module.ts"
      ]
    }
  }
}
