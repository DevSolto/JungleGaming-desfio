{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@repo/types": [
        "../../packages/types/dist-cjs/index.js",
        "../../packages/types/dist/index.d.ts"
      ],
      "@repo/types/*": [
        "../../packages/types/dist-cjs/*.js",
        "../../packages/types/dist/*.d.ts"
      ],
      "@repo/logger": [
        "../../packages/logger/dist/index.js",
        "../../packages/logger/dist/index.d.ts"
      ],
      "@repo/logger/*": [
        "../../packages/logger/dist/*.js",
        "../../packages/logger/dist/*.d.ts"
      ]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
